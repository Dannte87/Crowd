               data-cart-item-id="<?php echo $this->jsQuoteEscape($_item->getSku()) ?>"
               title="<?php echo Mage::helper('core')->quoteEscape($this->__('Value')) ?>" class="input-text qty form-control" maxlength="20" />
        <input type="text" pattern="\d*" name="cart[<?php echo $_item->getId() ?>][money_value]" value="1"
               data-cart-item-id="<?php echo $this->jsQuoteEscape($_item->getSku()) ?>"
